{
    "manifest_version": 2,
    "name": "My popup",
    "version": "1.0",

    "permissions": [
        "activeTab",
        "nativeMessaging"
    ],

    "browser_action": {
        "default_popup": "index.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    }
}