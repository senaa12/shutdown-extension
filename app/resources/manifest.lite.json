{
    "manifest_version": 2,
    "name": "Shutdown Extension Lite",
    "version": "0.2",

    "description": "Small and simple extension for automatic computer shutdown",

    "icons": {
        "48": "logo-48.png",
        "128": "logo-128.png"
    },


    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "./icon.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "nativeMessaging"
    ],

    "offline_enabled": true
    
}