{
    "manifest_version": 2,
    "name": "Shutdown Extension Lite",
    "version": "1.0",

    "description": "Small and simple extension for automatic computer shutdown",

    "browser_action": {
        "default_popup": "index.html"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "nativeMessaging"
    ]
}